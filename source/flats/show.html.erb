<% flat = data.flats[owner] %>
<div class="banner-flat" style="background-image: linear-gradient(-225deg, rgba(0,0,0,0.6) 0%, rgba(0,0,0,0.3) 50%),url('<%= image_path flat.picture %>');
  height: 35vh;
  background-position: center;">

</div>

<div class="user-booking">
  <div class="container">
    <div class="row">
      <div class="col-xs-12 col-sm-6">
        <div class="user-profile">
          <div class="text-center">
            <%= image_tag flat.owner_picture, class: "avatar-xlarge", alt: flat.name %>
            <p> <%= owner.capitalize %></p>
          </div>
          <div id="user-description">
            <h1> <%= flat.summary %></h1>
            <p> <%= flat.city %></p>

            <% flat.rating.times do %>
            <i class="fa fa-star text-yellow" aria-hidden="true"></i>
            <% end %>
            <% (5 - flat.rating).times do %>
            <i class="fa fa-star text-gray" aria-hidden="true"></i>
            <% end %>
          </div>
        </div>
      </div>
      <div class="col-xs-12 col-sm-4">
        <div class="wrapper-grey">
          <h4>Book this flat</h4>
          <div class="form-white">
            <div class="row">
              <div class="col-xs-6">
                <div class="form-group"><input type="text" id="" class="form-control input" placeholder="checkin"></div>
              </div>
              <div class="col-xs-6">
                <div class="form-group"><input type="text" id="" class="form-control input" placeholder="checkout"></div>
              </div>
            </div>

            <div class="form-group">
             <select name="" id="" class="form-control input">
              <option value="1">1 person</option>
              <option value="2">2 persons</option>
              <option value="3">3 persons</option>
            </select>
          </div>
        </div>
        <button type="submit" class="btn btn-danger" id="bookit">Book it</button>
      </form>
    </div>
  </div>
</div>
</div>
<div class="flat-info">
<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1">
    <h2>About this flat</h2>
    <h3>description</h3>
    <hr>
      <div class="row">
        <div class="col-xs-12 col-sm-2"> <p>The space</p></div>
        <div class="col-xs-12 col-sm-4"> <p>First column</p></div>
         <div class="col-xs-12 col-sm-4"> <p>Second column</p></div>
      </div>
      <hr>
      <div class="row">
        <div class="col-xs-12 col-sm-2"><p>Amenities</p></div>
        <div class="col-xs-12 col-sm-4"> <p>First column</p></div>
         <div class="col-xs-12 col-sm-4"> <p>Second column</p></div>
      </div>
    </div>
  </div>
</div>
</div>
</div>
</div>


